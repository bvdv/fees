{
    "env": {
        // "browser": true,
        // "es2021": true,
        "node": true,
        "jest": true
    },
    "extends": [
        "airbnb-base"
    ],
    "parserOptions": {
        // "ecmaVersion": 12,
        "sourceType": "module"
    },
    "rules": {
        "no-use-before-define": [
            "error",
            {
                "functions": false
            }
        ],
        "import/extensions": [
            "error",
            "never",
            {
                "js": "ignorePackages"
            }
        ],
        "no-param-reassign": [
            "error",
            {
                "props": true,
                "ignorePropertyModificationsFor": [
                    "performedOperation",
                    "operation"
                ]
            }
        ]
    }
}